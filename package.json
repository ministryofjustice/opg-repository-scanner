{
  "name": "repository-scanner",
  "version": "0.1.0",
  "private": true,
  "description": "Repository scanning action to read all packages installed via support manifest and lock files.",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts --fix",
    "package": "ncc build --source-map --license licenses.txt",
    "test": "jest",
    "all": "rm -Rf ./lib && rm -Rf ./dist && npm run build && npm run format && npm run lint && npm run package && npm test",
    "tester": "INPUT_SOURCE_DIRECTORY='./test-repo' INPUT_SOURCE_FOLLOW_SYMLINKS='true' INPUT_REPOSITORY_NAME='test-repo' node ./dist/index.js"
  },
  "keywords": [
    "github",
    "action",
    "dependancies",
    "SCA"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@actions/artifact": "^0.5.1",
    "@actions/core": "^1.2.6",
    "@actions/glob": "^0.1.1",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/jest": "^26.0.15",
    "@types/node": "^14.14.9",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/parser": "^4.8.1",
    "@vercel/ncc": "^0.25.1",
    "eslint": "^7.17.0",
    "eslint-plugin-github": "^4.1.1",
    "eslint-plugin-jest": "^24.1.3",
    "jest": "^26.6.3",
    "jest-circus": "^26.6.3",
    "prettier": "2.2.1",
    "ts-jest": "^26.4.4",
    "typescript": "^4.1.3"
  }
}
